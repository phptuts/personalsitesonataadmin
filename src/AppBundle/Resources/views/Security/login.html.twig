
{% extends "AppBundle::layout.html.twig" %}

{% block nav %}{% endblock %}
{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

        
        <div class="container" id="main-login">
            <div class="row">
                <h1>Login</h1>
            </div>
            <div class="row ">
                <form action="{{ path('login_check') }}" method="post" class="col-sm-9 col-xs-12 well">
                    
                    <div class="form-group">
                                            
                        <label for="username" >Username:</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />

                    </div>
                        
                    <div class="form-group">
                        <label for="password" >Password:</label>
                        <input type="password" class="form-control"  id="password" name="_password" />
                    </div>

                    <button type="submit" class="btn btn-lg btn-success">login</button>
                </form>
                        
            </div>
            {% if error is not empty %}
                <div class="row">
                    <div class="col-sm-9 col-xs-12">
                       <div class="alert alert-danger alert-dismissable">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            {{ error.messageKey|trans(error.messageData, 'security') }} 
                        </div> 
                    </div>
                </div>
            {% endif %}
        </div>

    
{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/thirdparty/jquery/dist/jquery.min.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('js/thirdparty/bootstrap/dist/js/bootstrap.min.js') }}" ></script>
{% endblock %} 