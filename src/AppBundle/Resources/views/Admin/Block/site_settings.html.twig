{# empty Twig template #}
{% extends sonata_block.templates.block_base %}
{% form_theme siteForm 'bootstrap_3_layout.html.twig' %}

{% block block %}

    <div class="container-fluid">
        <div class="row">
            <h1>{{ settings.title }}</h1>
        </div>
        <div class="row">
            {{ form_start(siteForm, {'attr' : {'class' : 'col-md-5'} }) }}
            {{ form_row(siteForm.name, {'label' : 'Name'}) }}
            {{ form_row(siteForm.email, {'label' : 'Site Email'}) }}
            {{ form_row(siteForm.city, {'label' : 'City'}) }}
            {{ form_row(siteForm.state, {'label' : 'State'}) }}
            {{ form_row(siteForm.summary, {'label' : 'Home Page Summary'}) }}
            <div class="form-group">
                {{ form_widget(siteForm.picture, {'attr' : {'title' : 'Upload Personal Site Picture'} }) }}
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
            {{ form_end(siteForm) }}
            
            <div class="col-lg-offset-1 col-lg-5">
                <h2>Main Picture</h2>
                <img src="{{  siteForm.vars.picture_url }}"  alt="pic"/>
            </div>
                
        </div>

    </div>
        
    
       

{% endblock %}

